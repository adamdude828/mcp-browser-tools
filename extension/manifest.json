{
  "manifest_version": 3,
  "name": "Browser Connect",
  "version": "1.0.0",
  "description": "Connect your browser to MCP server",
  "action": {
    "default_title": "Browser Connect"
  },
  "permissions": [
    "tabs",
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-script.js"],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["content-script.js", "minimal-selector.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "commands": {
    "toggle-selection-mode": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "Command+Shift+S"
      },
      "description": "Toggle element selection mode"
    }
  }
} 